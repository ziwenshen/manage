<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.manage.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="com.server.manage.model.Menu">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="menu_code" property="menuCode" />
        <result column="name" property="name" />
        <result column="module" property="module" />
        <result column="node_type" property="nodeType" />
        <result column="sort_order" property="sortOrder" />
        <result column="url" property="url" />
        <result column="icon" property="icon" />
        <result column="path" property="path" />
        <result column="meta" property="meta" />
        <result column="created_at" property="createdAt" typeHandler="com.server.manage.config.PostgreSqlLocalDateTimeTypeHandler"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, parent_id, menu_code, name, module, node_type, sort_order, url, icon, path, meta, created_at
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        ORDER BY sort_order, id
    </select>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        WHERE id = #{id}
    </select>

    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        WHERE parent_id = #{parentId}
        ORDER BY sort_order, id
    </select>

    <select id="selectByMenuCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        WHERE menu_code = #{menuCode}
    </select>

    <select id="selectByModule" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        WHERE module = #{module}
        ORDER BY sort_order, id
    </select>

    <insert id="insert" parameterType="com.server.manage.model.Menu" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO menu (parent_id, menu_code, name, module, node_type, sort_order, url, icon, path, meta, created_at)
        VALUES (#{parentId}, #{menuCode}, #{name}, #{module}, #{nodeType}, #{sortOrder}, #{url}, #{icon}, #{path}, #{meta}, #{createdAt})
    </insert>

    <update id="update" parameterType="com.server.manage.model.Menu">
        UPDATE menu
        SET parent_id = #{parentId},
            menu_code = #{menuCode},
            name = #{name},
            module = #{module},
            node_type = #{nodeType},
            sort_order = #{sortOrder},
            url = #{url},
            icon = #{icon},
            path = #{path},
            meta = #{meta}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM menu WHERE id = #{id}
    </delete>

    <delete id="deleteByParentId" parameterType="long">
        DELETE FROM menu WHERE parent_id = #{parentId}
    </delete>

    <!-- 分页查询菜单列表 -->
    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM menu
        <where>
            <if test="query.name != null and query.name != ''">
                AND name LIKE CONCAT('%', #{query.name}, '%')
            </if>
            <if test="query.menuCode != null and query.menuCode != ''">
                AND menu_code LIKE CONCAT('%', #{query.menuCode}, '%')
            </if>
            <if test="query.module != null and query.module != ''">
                AND module = #{query.module}
            </if>
            <if test="query.nodeType != null">
                AND node_type = #{query.nodeType}
            </if>
            <if test="query.parentId != null">
                AND parent_id = #{query.parentId}
            </if>
        </where>
        ORDER BY sort_order, id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 查询菜单总数 -->
    <select id="selectCount" resultType="long">
        SELECT COUNT(*)
        FROM menu
        <where>
            <if test="query.name != null and query.name != ''">
                AND name LIKE CONCAT('%', #{query.name}, '%')
            </if>
            <if test="query.menuCode != null and query.menuCode != ''">
                AND menu_code LIKE CONCAT('%', #{query.menuCode}, '%')
            </if>
            <if test="query.module != null and query.module != ''">
                AND module = #{query.module}
            </if>
            <if test="query.nodeType != null">
                AND node_type = #{query.nodeType}
            </if>
            <if test="query.parentId != null">
                AND parent_id = #{query.parentId}
            </if>
        </where>
    </select>

</mapper>
