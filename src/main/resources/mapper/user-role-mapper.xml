<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.manage.mapper.UserRoleMapper">
    <select id="selectRoleIdsByUserId" resultType="long" parameterType="long">
        SELECT role_id FROM user_role WHERE user_id = #{userId}
    </select>
    <select id="selectUserIdsByRoleId" resultType="long" parameterType="long">
        SELECT user_id FROM user_role WHERE role_id = #{roleId}
    </select>
</mapper>
