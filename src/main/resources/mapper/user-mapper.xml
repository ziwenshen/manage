<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.manage.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="com.server.manage.model.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="enabled" column="enabled"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, username, password, enabled, created_at
    </sql>

    <!-- 根据ID查询用户 -->
    <select id="selectById" resultMap="UserResultMap" parameterType="long">
        SELECT <include refid="Base_Column_List"/>
        FROM "user" 
        WHERE id = #{id}
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultMap="UserResultMap" parameterType="string">
        SELECT <include refid="Base_Column_List"/>
        FROM "user" 
        WHERE username = #{username}
    </select>

    <!-- 根据用户名查询用户ID -->
    <select id="selectIdByUsername" resultType="long" parameterType="string">
        SELECT id FROM "user" WHERE username = #{username}
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.server.manage.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO "user" (username, password, enabled, created_at)
        VALUES (#{username}, #{password}, #{enabled}, #{createdAt})
    </insert>

    <!-- 更新用户 -->
    <update id="updateById" parameterType="com.server.manage.model.User">
        UPDATE "user"
        <set>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM "user" WHERE id = #{id}
    </delete>

    <!-- 分页查询用户列表 -->
    <select id="selectPageList" resultMap="UserResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM "user"
        <where>
            <if test="query.username != null and query.username != ''">
                AND username LIKE CONCAT('%', #{query.username}, '%')
            </if>
            <if test="query.enabled != null">
                AND enabled = #{query.enabled}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 查询用户总数 -->
    <select id="selectCount" resultType="long">
        SELECT COUNT(*)
        FROM "user"
        <where>
            <if test="query.username != null and query.username != ''">
                AND username LIKE CONCAT('%', #{query.username}, '%')
            </if>
            <if test="query.enabled != null">
                AND enabled = #{query.enabled}
            </if>
        </where>
    </select>

    <!-- 检查用户名是否存在 -->
    <select id="existsByUsername" resultType="boolean" parameterType="string">
        SELECT COUNT(*) > 0 FROM "user" WHERE username = #{username}
    </select>

</mapper>
